{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0",
  "description": "View weather for any city.",
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ]
}
